<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_225sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:background="@color/white"
    android:padding="@dimen/_4sdp">
    <!-- android:layout_height="@dimen/_235sdp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/image" />

        <com.easymco.custom.FontRegular
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/white"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/body" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="start|center"
            android:orientation="horizontal">

            <com.easymco.custom.FontBold
                android:id="@+id/category_special_price_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/special_price_color"
                android:textSize="@dimen/_12sdp" />
            <!--
              android:textSize="@dimen/sub_heading"
             android:gravity="start"-->

            <com.easymco.custom.FontRegular
                android:id="@+id/category_special_price_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/price_color"
                android:textSize="@dimen/caption" />
                  <!--
                  android:textSize="@dimen/body"
                  android:gravity="start"-->

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/category_wishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@color/white_transparent"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_favorite_grey_500_24dp" />
</FrameLayout>

