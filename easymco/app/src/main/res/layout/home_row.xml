<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/column_image"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_130sdp"
        android:background="@color/white"
        android:contentDescription="@string/image" />

    <com.easymco.custom.FontRegular
        android:id="@+id/column_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:gravity="center"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/body" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
          android:gravity="center"
        android:orientation="horizontal">

        <com.easymco.custom.FontBold
            android:id="@+id/column_special_price_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/special_price_color"
            android:textSize="@dimen/_12sdp" />
        <!--
         android:textSize="@dimen/sub_heading"
         android:layout_weight="1"-->

        <com.easymco.custom.FontMedium
            android:id="@+id/column_special_price_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:gravity="center"
            android:textColor="@color/price_color"
            android:textSize="@dimen/caption" />
        <!-- android:layout_weight="1"-->

    </LinearLayout>

</LinearLayout>
