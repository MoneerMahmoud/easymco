<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/category_menu_title_icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@color/black_transparent_0"
        android:contentDescription="@string/image" />

    <com.easymco.custom.FontRegular
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/category_menu_title_icon"
        android:layout_toRightOf="@+id/category_menu_title_icon"
        android:gravity="start|center"
        android:paddingEnd="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingStart="@dimen/_15sdp"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/body" />

    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/icon_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_expand_less_black_24dp"
        android:visibility="gone" />

</RelativeLayout>
