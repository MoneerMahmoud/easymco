<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_product_list_back_ground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <com.easymco.custom.FontRegular
            android:id="@+id/test_cat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white_transparent"
            android:gravity="start|center"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/sub_heading" />

        <com.easymco.custom.FontMedium
            android:id="@+id/home_view_all"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/btn_with_corner_style"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/view_all"
            android:textColor="@color/white"
            android:textSize="@dimen/body" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:foregroundGravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/test_home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"
            android:overScrollMode="never" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
