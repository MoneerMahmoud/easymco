<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/wish_list_product_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:contentDescription="@string/image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.easymco.custom.FontRegular
                android:id="@+id/wish_list_product_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/zero_dp"
                android:layout_weight="1"
                android:lines="3"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/body" />

            <com.easymco.custom.FontBold
                android:id="@+id/wish_list_product_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/zero_dp"
                android:layout_weight="0.6"
                android:padding="@dimen/_4sdp"
                android:textColor="@color/special_price_color"
                android:textSize="@dimen/body" />


            <com.easymco.custom.FontBold
                android:id="@+id/wish_list_product_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/black_transparent_0"
                android:padding="@dimen/_5sdp"
                android:text="@string/wish_list_remove"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sub_heading" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
