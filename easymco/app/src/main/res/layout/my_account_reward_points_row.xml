<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_1sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_r_reward_pnts_recycle_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/layout_r_reward_points_recycle_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_date_add"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:text="@string/tv_date_added"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_date_add_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_r_reward_points_recycle_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_r_reward_points_recycle_row_1"
            android:orientation="horizontal">

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_description"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:text="@string/tv_description"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_description_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_r_reward_points_recycle_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_r_reward_points_recycle_row_2"
            android:orientation="horizontal">

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_points"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:text="@string/tv_points"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />

            <com.easymco.custom.FontRegular
                android:id="@+id/tv_reward_points_points_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/body" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>