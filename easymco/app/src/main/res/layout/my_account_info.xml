<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.account.MyAccountInfo">

    <include
        android:id="@+id/actionbar"
        layout="@layout/tool_bar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_id_my_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView_my_ac_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layout_my_ac_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <com.easymco.custom.FontBold
                        android:id="@+id/tv_personal_details_main_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/my_account_info_page"
                        android:textColor="@color/primary_text_color"
                        android:textSize="@dimen/title" />


                    <com.easymco.custom.FontBold
                        android:id="@+id/tv_personal_details_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/your_personal_details"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/sub_heading" />

                    <View
                        android:id="@+id/SplitLine_hor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@color/grey_400" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                        android:drawableRight="@drawable/ic_action_grade_red_10dp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/first_name"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <EditText
                        android:id="@+id/et_my_ac_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_modified_text_state"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/secondary_text_color"
                        android:textColorHint="@color/third_level_text_color"
                        android:textSize="@dimen/body" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_error_edit_pro_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/reg_error_first_name"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                        android:drawableRight="@drawable/ic_action_grade_red_10dp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/last_name"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <EditText
                        android:id="@+id/et_my_ac_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_modified_text_state"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/secondary_text_color"
                        android:textColorHint="@color/third_level_text_color"
                        android:textSize="@dimen/body" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_error_edit_pro_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/reg_error_last_name"
                        android:textColor="@color/red"
                        android:textSize="@dimen/caption"
                        android:visibility="gone" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/e_mail"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/et_my_ac_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_modified_text_state"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_error_email2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/reg_error_email2"
                        android:textColor="@color/red"
                        android:textSize="@dimen/caption"
                        android:visibility="gone" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:drawableEnd="@drawable/ic_action_grade_red_10dp"
                        android:drawableRight="@drawable/ic_action_grade_red_10dp"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/telephone"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <EditText
                        android:id="@+id/et_my_ac_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_modified_text_state"
                        android:hint="@string/telephone"
                        android:inputType="phone"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/body" />

                    <com.easymco.custom.FontRegular
                        android:id="@+id/tv_error_telephone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/reg_error_telephone"
                        android:textColor="@color/red"
                        android:textSize="@dimen/caption"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/layout_my_ac_actions"
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_my_ac_back"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/negative_btn_back_grand"
                            android:text="@string/back"
                            android:textColor="@color/white"
                            android:textSize="@dimen/body" />

                        <Button
                            android:id="@+id/btn_my_ac_continue"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/positive_btn_back_ground"
                            android:text="@string/_continue"
                            android:textColor="@color/white"
                            android:textSize="@dimen/body" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <include
                android:id="@+id/splash_screen_progress_bar"
                layout="@layout/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
