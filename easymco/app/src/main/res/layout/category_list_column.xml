<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:layout_marginStart="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:background="@color/white"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="@dimen/_110sdp"
            android:layout_weight="0.7"
            android:background="@color/white"
            android:contentDescription="@string/image"
            android:padding="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/category_wishList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginStart="@dimen/_120sdp"
                android:background="@color/white_transparent"
                android:contentDescription="@string/image"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_favorite_grey_500_24dp" />

            <com.easymco.custom.FontRegular
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/sub_heading" />
            <!-- android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"-->

            <com.easymco.custom.FontBold
                android:id="@+id/category_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@color/white"
                android:padding="@dimen/_2sdp"
                android:textColor="@color/special_price_color"
                android:textSize="@dimen/body" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.easymco.custom.FontBold
                    android:id="@+id/category_special_price_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/special_price_color"
                    android:textSize="@dimen/_12sdp" />
                <!-- android:textSize="@dimen/body"-->

                <com.easymco.custom.FontRegular
                    android:id="@+id/category_special_price_p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:background="@color/white"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/caption" />
                <!-- android:textSize="@dimen/body" -->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
